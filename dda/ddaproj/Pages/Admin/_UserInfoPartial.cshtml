@model ddaproj.Data.Models.ApplicationUser
@inject AdminModel AdminModel
<table class="table table-sm">
    <tbody>
        <tr>
            <th scope="row" class="border-top-0">Email</th>
            <td class="border-top-0">@Model.Email</td>
        </tr>
        <tr>
            <th scope="row">Username</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th scope="row">Name</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>
        <tr>
            <th scope="row">Roles</th>
            <td>@AdminModel.GetCustomClaimsAsStringAsync(Model).Result</td>
        </tr>
    </tbody>
</table>