@page
@model ddaproj.Pages.Admin.SuperAdminModel
@{
    ViewData["Title"] = "SuperAdmin";
}

<div class="row d-flex justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                
            </div>
            <div class="card-body">
                <partial name="_UserInfoPartial" model="@Model.ApplicationUser" />
                <div class="row">
                    <div class="col-lg-6">
                        <form asp-page-handler="DeleteUser">
                            <input type="hidden" asp-for="ApplicationUser.Id" />
                            <button class="btn btn-danger" type="submit" OnClick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <form asp-page-handler="UpdateAdminStatus">
                            <input type="hidden" asp-for="ApplicationUser.Id" />
                            @if (Model.IsAdmin())
                            {
                                <button class="btn btn-warning" type="submit" OnClick="return confirm('Are you sure you want to demote this user?')">Demote</button>
                            }
                            else
                            {
                                <button class="btn btn-success" type="submit" OnClick="return confirm('Are you sure you want to promote this user?')">Promote</button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
