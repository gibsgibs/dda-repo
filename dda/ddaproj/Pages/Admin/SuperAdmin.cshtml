@page
@model ddaproj.Pages.Admin.SuperAdminModel
@{
    ViewData["Title"] = "SuperAdmin";
}

<div class="row d-flex justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="h3 m-0">Edit User (Super)</div>
            </div>
            <div class="card-body">
                <partial name="_UserInfoPartial" model="@Model.ApplicationUser" />
                <div class="row">
                    <div class="col-lg-6 mb-3 mb-lg-0">
                        <form asp-page-handler="UpdateAdminStatus" class="d-flex flex-column h-100">
                            <input type="hidden" asp-for="ApplicationUser.Id" />
                            @if (Model.IsAdmin())
                            {
                                <div class="h5 text-center">
                                    Would you like to demote @Model.ApplicationUser.UserName?
                                </div>
                                <div class="mt-auto">
                                    <button class="btn btn-block btn-warning" type="submit" OnClick="return confirm('Are you sure you want to demote this user?')">
                                        Demote
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="h5 text-center">
                                    Would you like to promote @Model.ApplicationUser.UserName to admin?
                                </div>
                                <div class="mt-auto">
                                    <button class="btn btn-block btn-success" type="submit" OnClick="return confirm('Are you sure you want to promote this user?')">
                                        Promote
                                    </button>
                                </div>
                            }
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <form asp-page-handler="DeleteUser" class="d-flex flex-column h-100">
                            <input type="hidden" asp-for="ApplicationUser.Id" />
                            <div class="h5 text-center">Would you like to delete @Model.ApplicationUser.UserName?</div>
                            <div class="mt-auto">
                                <button class="btn btn-block btn-danger" type="submit" OnClick="return confirm('Are you sure you want to delete this user?')">
                                    Delete
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
